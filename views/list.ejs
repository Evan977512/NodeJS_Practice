    <h3 class="ml-2 my-3">List of todolist from MongoDB</h3>

    <ul class="list-group">
      <% for(var i = 0; i < posts.length; i++){ %>
      <li class="list-group-item">
        <p>number: <%= posts[i]._id %></p>
        <h4>name of todolist: <%= posts[i].todoList %></h4>
        <h4>Due Date:<%= posts[i].DueDate %></h4>
        <button class="delete" data-id="<%= posts[i]._id %>">DELETE</button>
      </li>
      <% } %>
    </ul>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <script>
      $(".delete").click((e) => {
        var number = e.target.dataset.id;
        var action = $(this);
        $.ajax({
          method: "DELETE",
          url: "/delete",
          data: { _id: number },
        })
          .done(function (result) {
            // 페이지를 강제로 새로고침 해주세요....
            // 삭제버튼을 누른 요소를 제거해주세요/안보이게
            console.log("wow!!! delete!!");
            action.parent("li").fadeOut();
          })
          .fail(function () {}); // 요청이 실패시 실행할 코드.
      });
    </script>

